// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  CANDIDATE
  COMPANY
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  TRIALING
  INCOMPLETE
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  FREELANCE
  INTERNSHIP
}

enum ExperienceLevel {
  ENTRY
  INTERMEDIATE
  SENIOR
  EXECUTIVE
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  INTERVIEW
  ACCEPTED
  REJECTED
}

enum ServiceCategory {
  PEDREIRO
  FAXINEIRA
  GARCOM
  ENCANADOR
  PINTOR
  JARDINEIRO
  ELETRICISTA
  CARPINTEIRO
  MECANICO
  COZINHEIRO
  OUTROS
}

enum ServiceRequestStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          UserRole  @default(CANDIDATE)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  candidate     Candidate?
  company       Company?
  subscription  Subscription?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Candidate {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?  @db.Text
  phone       String?
  location    String?
  skills      String[] // Array of skills
  resume      String? // URL to resume file
  linkedIn    String?
  portfolio   String?
  availability Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications Application[]
  experiences  Experience[]
  educations   Education[]

  @@map("candidates")
}

model Company {
  id          String   @id @default(cuid())
  userId      String   @unique
  companyName String
  description String?  @db.Text
  website     String?
  logo        String?
  industry    String?
  size        String? // e.g., "1-10", "11-50", "51-200", etc.
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs Job[]

  @@map("companies")
}

model Job {
  id               String          @id @default(cuid())
  companyId        String
  title            String
  description      String          @db.Text
  requirements     String[]
  responsibilities String[]
  salary           String?
  location         String?
  remote           Boolean         @default(false)
  type             JobType         @default(FULL_TIME)
  experienceLevel  ExperienceLevel @default(INTERMEDIATE)
  isActive         Boolean         @default(true)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // Relations
  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  applications Application[]

  @@map("jobs")
}

model Application {
  id          String            @id @default(cuid())
  candidateId String
  jobId       String
  coverLetter String?           @db.Text
  status      ApplicationStatus @default(PENDING)
  appliedAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([candidateId, jobId])
  @@map("applications")
}

model Experience {
  id          String    @id @default(cuid())
  candidateId String
  title       String
  company     String
  location    String?
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("experiences")
}

model Education {
  id          String    @id @default(cuid())
  candidateId String
  institution String
  degree      String
  field       String?
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("educations")
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  stripeCurrentPeriodEnd DateTime?
  status               SubscriptionStatus @default(TRIALING)
  plan                 String // e.g., "basic", "professional", "enterprise"
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model ServiceProvider {
  id             String            @id @default(cuid())
  userId         String
  category       ServiceCategory
  description    String            @db.Text
  hourlyRate     Decimal?          @db.Decimal(10, 2)
  experienceYears Int?
  location       String
  phone          String
  available      Boolean           @default(true)
  rating         Decimal?          @db.Decimal(3, 2) // 0.00 to 5.00
  totalJobs      Int               @default(0)
  portfolio      String[]          // Array of image URLs
  certifications String[]          // Array of certification names
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  // Relations
  serviceRequests ServiceRequest[]

  @@map("service_providers")
}

model ServiceRequest {
  id                String               @id @default(cuid())
  serviceProviderId String
  clientName        String
  clientEmail       String
  clientPhone       String
  description       String               @db.Text
  location          String
  preferredDate     DateTime?
  budget            Decimal?             @db.Decimal(10, 2)
  status            ServiceRequestStatus @default(PENDING)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  // Relations
  serviceProvider ServiceProvider @relation(fields: [serviceProviderId], references: [id], onDelete: Cascade)

  @@map("service_requests")
}
